<p style="color: green"><%= notice %></p>
<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>
  <p>
    <strong>Name:</strong>
    <%= restaurant.name %>
  </p>
  <p>
    <strong>User:</strong>
    <%= restaurant.user_id %>
  </p>
  <p>
    <%= link_to "Show this restaurant", restaurant_path(restaurant) %>
  </p>
<% end %>
<%= link_to "New restaurant", new_restaurant_path %>
